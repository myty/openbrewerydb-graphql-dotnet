schema {
  query: Query
  mutation: Mutation
  subscription: Subscription
}

"The node interface is implemented by entities that have a global unique identifier."
interface Node {
  id: ID!
}

"A brewery of beer"
type Brewery implements Node {
  breweryReviews: [Review]
  "Friendly id for Brewery"
  brewery_id: String!
  "Type of Brewery"
  brewery_type: String!
  "The city of the brewery"
  city: String
  "The country of origin for the brewery"
  country: String
  createdAt: DateTime!
  id: ID!
  "Latitude portion of lat\/long coordinates"
  latitude: Decimal
  "Longitude portion of lat\/long coordinates"
  longitude: Decimal
  "Name of brewery"
  name: String!
  nearby("limit the nearby breweries to search radius, defaults to 25 milles" within: Int): [Brewery]
  "The phone number for the brewery"
  phone: String
  "The state of the brewery"
  postal_code: String
  "The state of the brewery"
  state: String
  "The street of the brewery"
  street: String
  "Tags that have been attached to the brewery"
  tag_list: [String]!
  "Date timestamp of the last time the record was updated"
  updated_at: DateTime!
  "Website address for the brewery"
  website_url: String
}

"A connection to a list of items."
type BreweryConnection {
  "A list of edges."
  edges: [BreweryEdge!]
  "A flattened list of the nodes."
  nodes: [Brewery]
  "Information to aid in pagination."
  pageInfo: PageInfo!
  totalCount: Int!
}

"An edge in a connection."
type BreweryEdge {
  "A cursor for use in pagination."
  cursor: String!
  "The item at the end of the edge."
  node: Brewery
}

type CreateBreweryPayload {
  brewery: Brewery
  "Relay Client Mutation Id"
  clientMutationId: String!
  errors: [UserError]
}

type CreateUserPayload {
  "Relay Client Mutation Id"
  clientMutationId: String!
  user: User
}

type LoginPayload {
  "Relay Client Mutation Id"
  clientMutationId: String!
  me: User
  scheme: String
  token: String
}

type Mutation {
  createBrewery(input: CreateBreweryInput): CreateBreweryPayload
  createReview(input: ReviewInput): ReviewPayload
  createUser(input: CreateUserInput): CreateUserPayload
  login(input: LoginInput): LoginPayload
  updateBrewery(input: UpdateBreweryInput): UpdateBreweryPayload
}

"Information about pagination in a connection."
type PageInfo {
  "When paginating forwards, the cursor to continue."
  endCursor: String
  "Indicates whether more edges exist following the set defined by the clients arguments."
  hasNextPage: Boolean!
  "Indicates whether more edges exist prior the set defined by the clients arguments."
  hasPreviousPage: Boolean!
  "When paginating backwards, the cursor to continue."
  startCursor: String
}

type Query {
  breweries(after: String before: String "filter by brewery id" brewery_id: String "search by city name" city: String first: PaginationAmount last: PaginationAmount "search by brewery name" name: String "general search" search: String "sort by" sort: [String] "filter by state" state: String "filter by tags" tags: [String] "filter by type" type: String): BreweryConnection
  breweryById("filter by brewery id" brewery_id: String): Brewery
  nearbyBreweries(after: String before: String first: PaginationAmount last: PaginationAmount latitude: Float! longitude: Float!): BreweryConnection
  node(id: ID!): Node
}

type Review {
  body: String!
  brewery: Brewery!
  createdOn: DateTime!
  id: Long!
  subject: String!
}

type ReviewPayload {
  "Relay Client Mutation Id"
  clientMutationId: String!
  review: Review
}

type Subscription {
  onReviewReceived: Review
}

type UpdateBreweryPayload {
  brewery: Brewery
  "Relay Client Mutation Id"
  clientMutationId: String!
  errors: [UserError]
}

type User {
  email: String!
  firstName: String!
  fullName: String
  id: Long!
  lastName: String!
}

type UserError {
  code: String
  message: String
}

